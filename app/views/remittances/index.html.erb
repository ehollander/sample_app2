<% provide(:title, 'All Remittances') %>
<div> Logged in as: <%= current_user.name %></div>
<h1>All Remittances</h1>


<%= form_tag remittances_path, :method => 'get' do %>
<p> 
	<%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil  %>
</p>    
<% end %>




<ul class="users">
	<%= link_to "Add Remittance", new_remittance_path %>
<% @remittances.each do |remittance| %> 
<li>
	<%= remittance.user.name %> 
	| <%= remittance.issue.issue_number %>
	| <%= remittance.issue.cover_date.strftime("%b-%d-%Y") %> 
	| <%= remittance.magazine.title %> 
	| <%= link_to "Edit", edit_remittance_path(remittance) %>
	| <%= link_to "Delete", remittance, method: :delete, data: { confirm: "You sure you want to delete this remittance?" } %>
<% end %>
</ul>
