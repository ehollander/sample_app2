<% provide(:title, "Add Remittance Advice") %>
<h1>Add Remittance</h1>

<div class="row">

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@remittance) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :issue_id %>
      <%= f.text_field :issue_id %>

      <%= f.label :user_id %>
      <%= f.text_field :user_id %>

      <%= f.label :notes %>
      <%= f.text_field :notes %>

      <%= f.submit "Create Remittance Advice", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>