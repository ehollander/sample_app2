<% provide(:title, "Sign in") %>
<h1>Bauer Remittance Portal</h1>

<div class="row">

  <div class="span6 offset3">
     <div> Please sign in below: </div> <p>
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>
<div class = "center">
  <%= link_to image_tag("BM2.png", alt: "WE THINK POPLULAR"), 'http://www.bauerpublishing.com/' %>
</div>