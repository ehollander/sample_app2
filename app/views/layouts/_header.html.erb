<header class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <%#= link_to "Bauer", root_path, id: "logo" %>
      <%= link_to image_tag("bmg.png", alt: "Bauer Publishing",  
            :width => 131, :height => 100), 'http://bauerpublishing.com/' %>
      <nav>
         <ul class="nav pull-right">
         <!-- <li><%#= link_to "Add User", signup_path %></li>
          <li><%#= link_to "Help", help_path %></li> -->
          
          <% if signed_in? %>
            <% if current_user.admin? %> 
            <li><%= link_to "Create Remittance Advice", '#' %></li>
            <li><%= link_to "Search Remittance Advice", '#' %></li>
            <li><%= link_to "User Accounts", users_path %></li>
            <% end %> 
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <%= link_to "Settings", edit_user_path(current_user) %>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%#= link_to "Sign in", signin_path %> &nbsp</li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
